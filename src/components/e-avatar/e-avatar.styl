:host
  display block

.e-avatar
  transition 0.3s ease
  display flex
  align-items center
  justify-content center
  text-transform uppercase
  color: var(--gray-600);
  height 42px
  width 42px
  font-size 16px
  line-height 150%
  border-radius 100px
  &.xs
    height 24px
    width 24px
    font-size: 12px;
  &.lg
    height 56px
    width 56px
    font-size 18px
  &.xl,&.xxl
    height 72px
    width 72px
    font-size 18px
  &:focus,&:active
    box-shadow 0 0 0 3px var(--primary)

