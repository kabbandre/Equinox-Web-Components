:host {
  display: block;
}

.tabs
  display flex
  gap 12px
  .tab
    cursor pointer
    color var(--primary)
    background var(--gray-50)
    padding 12px
    border-radius: 100px;
    &.active
      color white
      background var(--primary)
    &.disabled
      color var(--gray-500)
      background transparent
    &.text
      padding 12px 0
      color var(--gray-500)
      background transparent
      &.active
        color var(--primary)
        font-weight: bold
      &.disabled
        color var(--gray-300)
    &.underline
      padding: 6px
      color var(--primary)

